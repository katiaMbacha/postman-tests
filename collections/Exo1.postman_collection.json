			"name": "AjoutClients",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.collectionVariables.set(\"lastname\", pm.variables.replaceIn(\"{{$randomLastName}}\"));",
							"pm.collectionVariables.set(\"firstname\", pm.variables.replaceIn(\"{{$randomFirstName}}\"));",
							"pm.collectionVariables.set(\"streetName\", pm.variables.replaceIn(\"{{$randomStreetName}}\"));",
							"pm.collectionVariables.set(\"city\", pm.variables.replaceIn(\"{{$randomCity}}\"));",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"POST renvoie code statuts 201\", () => pm.response.to.have.status(201));",
							"const created = pm.response.json();",
							"pm.test(\"Contient un id\", () => pm.expect(created).to.have.property(\"id\"));",
							"",
							"pm.test(\"firstname OK\", () => pm.expect(created.firstname).to.eql(pm.variables.get(\"firstname\")));",
							"pm.test(\"lastname OK\",  () => pm.expect(created.lastname ).to.eql(pm.variables.get(\"lastname\")));",
							"pm.test(\"city OK\",      () => pm.expect(created.address.city).to.eql(pm.variables.get(\"city\")));",
							"pm.test(\"street OK\",    () => pm.expect(created.address.streetName).to.eql(pm.variables.get(\"streetName\")));",
							"",
							"pm.collectionVariables.set(\"id\", created.id);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
